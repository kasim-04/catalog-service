{
  "info": {
    "name": "Cinema Catalog API",
    "description": "Postman collection for Cinema Catalog Service (FastAPI)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "admin_token",
      "value": "supersecret123"
    }
  ],
  "item": [
    {
      "name": "Movies",
      "item": [
        {
          "name": "List movies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/movies?page=1&size=10&sort=-rating",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "movies"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "-rating"
                }
              ]
            }
          }
        },
        {
          "name": "Search movies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/movies?search=matrix",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "movies"
              ],
              "query": [
                {
                  "key": "search",
                  "value": "matrix"
                }
              ]
            }
          }
        },
        {
          "name": "Movies by genre",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/movies?genre_id=1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "movies"
              ],
              "query": [
                {
                  "key": "genre_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Movies by person",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/movies?person_id=1",
