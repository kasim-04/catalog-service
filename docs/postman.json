    {
      "name": "Admin",
      "item": [
        {
          "name": "Movies",
          "item": [
            {
              "name": "Create movie",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "X-Admin-Token",
                    "value": "{{admin_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/admin/movies",
                  "host": [
                    "{{base_url}}"
                  ],
                  "path": [
                    "api",
                    "admin",
                    "movies"
                  ]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Avatar\",\n  \"description\": \"Epic sci-fi\",\n  \"release_year\": 2009,\n  \"rating\": 8.5,\n  \"genre_ids\": [1],\n  \"country_ids\": [1],\n  \"person_ids\": [1]\n}"
                }
              }
            },
            {
              "name": "Update movie",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "X-Admin-Token",
                    "value": "{{admin_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/admin/movies/1",
                  "host": [
                    "{{base_url}}"
                  ],
                  "path": [
                    "api",
                    "admin",
                    "movies",
                    "1"
                  ]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Avatar (Updated)\",\n  \"description\": \"Updated description\",\n  \"release_year\": 2009,\n  \"rating\": 9.0,\n  \"genre_ids\": [1],\n  \"country_ids\": [1],\n  \"person_ids\": [1]\n}"
                }
              }
            },
            {
              "name": "Delete movie",
              "request": {
                "method": "DELETE",
                "header": [
                  {
                    "key": "accept",
                    "value": "application/json"
                  },
                  {
                    "key": "X-Admin-Token",
                    "value": "{{admin_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/admin/movies/1",
                  "host": [
                    "{{base_url}}"
                  ],
                  "path": [
                    "api",
                    "admin",
                    "movies",
                    "1"
                  ]
                }
              }
            }
          ]
        }
      ]
    }
